# -----------------------------------------------------
# 服务端口配置
# -----------------------------------------------------# 服务端口配置
API_SERVICE_PORT=6000
MAIL_SERVICE_PORT=6003
LLM_SERVICE_PORT=6002
REDIS_API_PORT=6379
NAS_SERVICE_PORT=6004
ADMIN_SERVICE_PORT=6001
MONITOR_SERVICE_PORT=6006
DDNS_SERVICE_PORT=6007 -----------------------------------------------------
# 数据库配置
# -----------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=nas_ddns
POSTGRES_USER=nas_admin

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------
# 域名配置
# -----------------------------------------------------
BASE_DOMAIN=0379.email
API_DOMAIN=api.0379.email
MAIL_DOMAIN=mail.0379.email
LLM_DOMAIN=llm.0379.email
NAS_DOMAIN=nas.0379.email
ADMIN_DOMAIN=admin.0379.email
MONITOR_DOMAIN=monitor.0379.email
DDNS_DOMAIN=ddns.0379.email
FRP_DOMAIN=frp.0379.email

# -----------------------------------------------------
# FRP配置
# -----------------------------------------------------
FRP_SERVER_HOST=8.152.195.33
FRP_SERVER_PORT=7001
FRP_WEB_SERVER_PORT=7500
FRP_WEB_SERVER_USER=yyc3
FRP_VHOST_HTTP_PORT=18080

# -----------------------------------------------------
# 应用配置
# -----------------------------------------------------
APP_NAME=YYC3-NAS-ECS
APP_VERSION=1.0.0
APP_TIMEZONE=Asia/Shanghai
APP_LOCALE=zh-CN

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=/var/log/yyc3

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600

# 会话配置
SESSION_TIMEOUT=3600
JWT_EXPIRES_IN=7d

# -----------------------------------------------------
# CORS配置
# -----------------------------------------------------
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# -----------------------------------------------------
# 速率限制配置
# -----------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------
# 监控配置
# -----------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------
# 上传配置
# -----------------------------------------------------
MAX_UPLOAD_SIZE=100MB
UPLOAD_DIR=/var/uploads

# -----------------------------------------------------
# 邮件配置（基础）
# -----------------------------------------------------
MAIL_ENABLED=true
MAIL_FROM=info@0379.email
MAIL_REPLY_TO=noreply@0379.email
MAIL_MAX_ATTACHMENT_SIZE=50MB
MAIL_MAX_MESSAGE_SIZE=100MB

# -----------------------------------------------------
# LLM配置（基础）
# -----------------------------------------------------
LLM_ENABLED=true
LLM_DEFAULT_MODEL=gpt-4
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# -----------------------------------------------------
# NAS配置（基础）
# -----------------------------------------------------
NAS_ENABLED=true
NAS_PROTOCOL=smb
NAS_HOST=localhost
NAS_PORT=445
NAS_SHARES_ENABLED=true
NAS_AUTO_BACKUP=true
NAS_BACKUP_INTERVAL=86400

# -----------------------------------------------------
# DDNS配置（基础）
# -----------------------------------------------------
DDNS_ENABLED=true
DDNS_PROVIDER=aliyun
DDNS_UPDATE_INTERVAL=300
DDNS_IP_DETECTION_URL=https://api.ipify.org

# -----------------------------------------------------
# 安全配置
# -----------------------------------------------------
SECURE_COOKIE=true
CSRF_ENABLED=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# -----------------------------------------------------
# Docker配置
# -----------------------------------------------------
DOCKER_NETWORK=yyc3-network
DOCKER_REGISTRY=
DOCKER_TAG=latest
