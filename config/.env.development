# =====================================================
# YYC³ 开发环境配置
# 继承自: config/.env.base
# 创建日期: 2025-01-05
# 版本: 1.0.0
# =====================================================

# -----------------------------------------------------
# 环境标识
# -----------------------------------------------------
ENVIRONMENT=development
NODE_ENV=development
VITE_APP_ENV=development
FLASK_ENV=development

# -----------------------------------------------------
# 前端配置
# -----------------------------------------------------
VITE_API_BASE_URL=http://localhost:6000
VITE_MAIL_API_URL=http://localhost:6003
VITE_LLM_API_URL=http://localhost:6002
VITE_REDIS_API_URL=http://localhost:6379
VITE_DDNS_API_URL=http://localhost:6007
VITE_FRP_API_URL=http://localhost:6004
VITE_NAS_API_URL=http://localhost:6006

VITE_WS_URL=ws://localhost:6000
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

VITE_AUTH_JWT_SECRET=dev-jwt-secret-2026-change-me
VITE_AUTH_TOKEN_STORAGE=localStorage
VITE_AUTH_REFRESH_TOKEN_ENABLED=true

VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true

VITE_LOG_LEVEL=debug
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_SERVER=false

VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000
VITE_DEBOUNCE_DELAY=300

VITE_THEME=default
VITE_LANGUAGE=zh-CN
VITE_TIMEZONE=Asia/Shanghai

VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_SOURCE_MAP=true

# -----------------------------------------------------
# 后端配置
# -----------------------------------------------------
DEBUG=true
TESTING=false

FLASK_DEBUG=true
FLASK_TESTING=false

DATABASE_URL=postgresql://nas_admin:${POSTGRES_PASSWORD}@localhost:5432/nas_ddns
SQLALCHEMY_ECHO=true
SQLALCHEMY_RECORD_QUERIES=true

REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
REDIS_TLS=false

# -----------------------------------------------------
# API配置
# -----------------------------------------------------
API_PREFIX=/api/v2
API_VERSION=2.0.0
API_TIMEOUT=30000
API_RATE_LIMIT=1000

# -----------------------------------------------------
# 开发服务器配置
# -----------------------------------------------------
FRONTEND_DEV_PORT=6005
FRONTEND_DEV_HOST=0.0.0.0

API_DEV_PORT=6000
API_DEV_HOST=0.0.0.0

MAIL_DEV_PORT=6003
MAIL_DEV_HOST=0.0.0.0

LLM_DEV_PORT=6002
LLM_DEV_HOST=0.0.0.0

REDIS_DEV_PORT=6379
REDIS_DEV_HOST=0.0.0.0

# -----------------------------------------------------
# Mock配置
# -----------------------------------------------------
USE_MOCK_DATA=true
MOCK_DELAY=500
MOCK_ERROR_RATE=0

# -----------------------------------------------------
# 监控配置（开发环境）
# -----------------------------------------------------
PROMETHEUS_DEV_PORT=9090
GRAFANA_DEV_PORT=3000
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# -----------------------------------------------------
# 邮件配置（开发环境）
# -----------------------------------------------------
# 开发环境使用SMTP调试服务器
MAIL_SMTP_HOST=localhost
MAIL_SMTP_PORT=1025
MAIL_SMTP_SECURE=false
MAIL_SMTP_TLS=false
MAIL_SMTP_AUTH=false
MAIL_IMAP_HOST=localhost
MAIL_IMAP_PORT=1143
MAIL_IMAP_SECURE=false
MAIL_IMAP_AUTH=false

# -----------------------------------------------------
# LLM配置（开发环境）
# -----------------------------------------------------
# 开发环境可以使用模拟响应或本地模型
LLM_MODE=mock
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=mistral

# -----------------------------------------------------
# 测试配置
# -----------------------------------------------------
TEST_DATABASE_URL=postgresql://nas_admin:${POSTGRES_PASSWORD}@localhost:5432/nas_ddns_test
TEST_REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6380/0
TEST_COVERAGE_THRESHOLD=80
