# Mail Service Environment Variables
NODE_ENV=production
PORT=3003
SERVICE_NAME=mail.0379.email

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/email_mail
REDIS_URL=redis://localhost:6379/3

# Email Service Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=0379.email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Security
ATTACHMENT_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=info
LOG_FILE=/www/app/mail/logs/app.log